                </div>
                <% } else{ %>
                    <div>
                        <input type="radio" id="<%= progresso %>" name="imparato" value="<%= value %>">
                        <label for="<%= progresso %>"><%= percent[value] %></label>
                    </div>
                    <% } %>
                    <% }); %>
                    
                    </form>
               <% } else{ %>
